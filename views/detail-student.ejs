<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom border-primary">
      <h1 class="h2">STUDENT</h1>
      <div>
        <!-- <button type="button" class="btn btn-sm btn-outline-primary">
          <i class="bi bi-pencil me-1"></i>
          Edit Profile
        </button> -->
        <a href="/student/edit/<%= student.name %>" type="button" class="btn btn-sm btn-outline-primary text-center"><i class="bi bi-pencil me-2"></i>Edit Profile</a>
        <a href="/student" type="button" class="btn btn-sm btn-outline-primary text-center">Back<i class="bi bi-arrow-right-square ms-2"></i></a>
      </div>
    </div>

    <!-- Detail -->
    <% if(!student) { %>
    <div class="alert alert-danger fw-bold" role="alert">
      Student not found!! <br> <a href="/student" class="alert-link fw-normal">&laquo; back to student list</a>
    </div>
    <% } else { %>  
      <div class="row gutters-sm">

        <!-- Left Side -->
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <% if(student.image == null) { %>
                  <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                  <div class="mt-3">
                <% } else { %> 
                  <img src="/img/<%= student.image %>" alt="<%= student.name %>" class="rounded-circle" width="150">
                  <div class="mt-3">
                <% } %> 
                  <h4><%= student.name %> </h4>
                  <p class="text-secondary mb-1"><%= student.department%></p>
                  <p class="text-muted font-size-sm"><%= student.address %></p>
                  <button class="btn btn-primary">Follow</button>
                  <button class="btn btn-outline-primary">Message</button>
                </div>
              </div>
            </div>
          </div>
          <div class="card mt-3">
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github me-2 icon-inline"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>Github</h6>
                <span class="text-secondary"><a class="text-decoration-none text-secondary" href="https://github.com/<%= student.github %>"><%= student.github %></a></span> 
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter me-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</h6>
                <span class="text-secondary"><%= student.twitter %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram me-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>Instagram</h6>
                <span class="text-secondary"><a class="text-decoration-none text-secondary" href="https://www.instagram.com/<%= student.instagram %>/"><%= student.instagram %></a></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook me-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
                <span class="text-secondary"><a class="text-decoration-none text-secondary" href="https://www.facebook.com/<%= student.facebook %>"><%= student.name %></a></span>
              </li>
            </ul>
          </div>
        </div>
  
        <!-- Right Side -->
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <!-- Name -->
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Full Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= student.name %> 
                </div>
              </div>
              <hr>
              <!-- Status -->
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Status</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= student.status %>
                </div>
              </div>
              <hr>
              <!-- No ID -->
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">No ID</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= student.noID %>
                </div>
              </div>
              <hr>
              <!-- Department -->
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Department</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= student.department %>
                </div>
              </div>
              <hr>
              <!-- Semester -->
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Semester</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= student.semester %>
                </div>
              </div>
              <hr>
              <!-- Birth -->
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Birth</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= student.birth %>
                </div>
              </div>
              <hr>
              <!-- Genre -->
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Genre</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= student.genre %>
                </div>
              </div>
              <hr>
              <!-- Email -->
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= student.email %>
                </div>
              </div>
              <hr>
              <!-- No Phone -->
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">No Phone</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= student.noPhone %>
                </div>
              </div>
              <hr>
              <!-- Address -->
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Address</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= student.address %> 
                </div>
              </div>

            </div>
          </div>
        </div>

      </div>
    <% } %>


    
</main>



